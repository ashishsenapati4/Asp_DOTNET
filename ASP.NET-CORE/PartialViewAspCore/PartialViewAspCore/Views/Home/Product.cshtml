@model IEnumerable<PartialViewAspCore.Models.Product>;
@{
    ViewData["Title"] = "Product";
}

<h1>Product</h1>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4 mb-3 d-flex" >
                @* <partial name="_ProductPartial" model="item"/> *@
                @await Html.PartialAsync("_ProductPartial",item)
            </div>
        }
    </div>
</div>